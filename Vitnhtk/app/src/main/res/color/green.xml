<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn (pressed) -->
    <item android:state_pressed="true" android:color="#388E3C" /> <!-- Màu xanh đậm hơn khi nhấn -->

    <!-- Trạng thái được chọn (selected) -->
    <item android:state_selected="true" android:color="#66BB6A" /> <!-- Màu xanh nhạt hơn khi được chọn -->

    <!-- Trạng thái mặc định -->
    <item android:color="#4CAF50" /> <!-- Màu xanh mặc định -->
</selector>
