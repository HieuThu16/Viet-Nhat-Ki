<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề thành tựu -->
    <TextView
        android:id="@+id/text_achievement_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên thành tựu"
        android:textStyle="bold"
        android:textSize="16sp" />

    <!-- Mô tả thành tựu -->
    <TextView
        android:id="@+id/text_achievement_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả thành tựu"
        android:paddingTop="4dp"
        android:textSize="14sp" />

    <!-- Thời gian đạt thành tựu -->
    <TextView
        android:id="@+id/text_achievement_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày đạt thành tựu"
        android:paddingTop="4dp"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray" />
</LinearLayout>
